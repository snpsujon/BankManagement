@model BankManagement.ViewModel.AuthVM
@{
    ViewData["Title"] = "UserProfilePic";
    Layout = "~/Views/Shared/_MyLayoutDash.cshtml";
}

<link href="~/myLib/Layout/plugins/dropify/css/dropify.min.css" rel="stylesheet">
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add a New Profile Picture</h4>

            </div><!--end card-header-->
            <div class="card-body">
                <form asp-action="UserProfilePic" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="UserID" value="0" />
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="mb-3 row">
                                <div class="col-xl-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title">Profile Picture</h4>
                                        </div><!--end card-header-->
                                        <div class="card-body">
                                            <input asp-for="ProfilePicture" type="file" id="input-file-now" class="dropify" />
                                        </div><!--end card-body-->
                                    </div><!--end card-->
                                </div><!--end col-->
                            </div>





                        </div>



                    </div>
                    <!--<hr />
                    <div class="card-header">
                        <h4 class="card-title">Add Some Pictures About Your Land</h4>
                    </div>-->
                    <!--end card-header-->
                    <!--<div class="row">
                        <div class="col-lg-6">
                        </div>
                        <div class="col-lg-6">
                        </div>
                    </div>-->
                    <button type="submit" class="btn btn-primary btn-square btn-outline-dashed">Add Profile Picture</button>
                </form>


            </div><!--end card-body-->
        </div><!--end card-->
    </div><!--end col-->
</div><!--end row-->
@section Scripts
    {

    <script src="~/myLib/Layout/plugins/dropify/js/dropify.min.js"></script>
    <script src="~/myLib/Layout/assets/pages/jquery.form-upload.init.js"></script>

}
